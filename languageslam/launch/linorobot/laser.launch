
<launch>
    <arg name="robot_name"/>
    <!-- Run Linorobot compatible laser drivers. Takes reference from env var LINOLIDAR. ie. export LINOLIDAR=xv11 -->
    <include file="$(find languageslam)/launch/linorobot/$(env LINOLIDAR).launch">
            <arg name="robot_name"  value="$(arg robot_name)" />
    </include>

    <!-- Publish static transform of the laser. Define your sensor offset here -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_laser" args="0.065 0 0.098 -1.571 0 0  $(arg robot_name)/base_link $(arg robot_name)/laser 50" />
</launch>
