<launch>
    <!--This is a universal approach by inserting the robot name using an argument-->

    <arg name="robot_name"/>
    <!-- Start ROS communication between the robot's computer and Linorobot base -->
    <node pkg="rosserial_python" name="rosserial_lino" type="serial_node.py" output="screen">
        <param name="port" value="/dev/ttyACM0" />
        <param name="baud" value="57600" />
    </node>

    <!-- IMU Relay and Filter -->
    <include file="$(find languageslam)/launch/linorobot/imu.launch" >
        <arg name="robot_name"  value="$(arg robot_name)" />
    </include>

    <!-- Publish Linorobot odometry -->
    <node pkg="linorobot" name="lino_base_node" type="lino_base_node"></node>

    <!-- Publish static transform from base_footprint to base_link -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_footprint_to_base_link" args="0 0 0.098 0 0 0  $(arg robot_name)/base_footprint $(arg robot_name)/base_link"/>

    <!-- Odom-IMU Extended Kalman Filter-->
    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization">
        <remap from="odometry/filtered" to="odom" />
        <rosparam command="load" file="$(find linorobot)/param/ekf/robot_localization.yaml" />
    </node>

    <!-- Run Linorobot compatible laser drivers -->

    <include file="$(find linorobot)/launch/linorobot/laser.launch" >
        <arg name="robot_name"  value="$(arg robot_name)" />
    </include>
    <!-- Run linorobot default lidar filter chain -->

    <include file="$(find linorobot)/launch/linorobot/laser_conf_l.launch" >
    
        <arg name="robot_name"  value="$(arg robot_name)" />
    </include>
</launch>
