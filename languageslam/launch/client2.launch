<launch>

  <param name="/use_sim_time" value="true" />
  <group>
    <env name="ROS_MASTER_URI" value="http://localhost:11312" /><!--only needed for running this all on the same machine-->
    <node name="playbag_2" pkg="rosbag" type="play"
      args="-r 2 --clock $(env HOME)/Downloads/ROSbags/1210bag2.bag" />

    <node name="cartographer_grpc_node_2" pkg="cartographer_ros"
      type="cartographer_grpc_node" args="
          -configuration_directory $(find languageslam)/config
          -configuration_basename client.lua
          -server_address localhost:50052
          -client_id 2
          "
      output="screen">
      <remap from="/scan" to="scan"/>

    </node>
    <node name="cartographer_grpc_server_2" pkg="cartographer_ros"
        type="cartographer_grpc_server.sh" args="
            -configuration_directory $(find languageslam)/config
            -configuration_basename robot_2_server.lua
            ">
    </node>


  </group>
</launch>

